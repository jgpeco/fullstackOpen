    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2"
  },
    "jest": {
    "testEnvironment": "node"
  }
